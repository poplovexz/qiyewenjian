# 生产环境配置示例
# 复制此文件为 .env 并修改相应的值

# 应用配置
APP_NAME=代理记账营运内部系统
DEBUG=False

# JWT 配置
SECRET_KEY=your-production-secret-key-change-this-to-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=30

# 数据库配置
DATABASE_URL=postgresql://postgres:your-db-password@localhost:5432/proxy_db

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS 配置
BACKEND_CORS_ORIGINS=http://172.16.2.221,http://172.16.2.221:5174,http://172.16.2.221:8000

# 缓存配置
CACHE_DEFAULT_TTL=900
CACHE_LONG_TTL=86400
CACHE_SHORT_TTL=60

