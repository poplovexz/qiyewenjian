# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/proxy_db

# JWT 配置
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 应用配置
APP_NAME=代理记账营运内部系统
DEBUG=True
API_V1_STR=/api/v1

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS 配置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:5174"]

# Redis配置 (缓存和会话存储)
# 生产环境强烈建议配置Redis以获得最佳性能
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# 或者使用完整的Redis URL
# REDIS_URL=redis://localhost:6379/0

# 缓存配置
CACHE_DEFAULT_TTL=900    # 默认缓存时间 (15分钟)
CACHE_LONG_TTL=86400     # 长期缓存时间 (24小时)
CACHE_SHORT_TTL=60       # 短期缓存时间 (1分钟)

# 生产环境注意事项:
# 1. 修改所有密钥和密码
# 2. 设置 DEBUG=False
# 3. 配置生产级数据库
# 4. 配置Redis集群 (推荐)
# 5. 设置适当的CORS源
# 6. 配置HTTPS
